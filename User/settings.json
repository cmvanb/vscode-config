{
  // --- FLOW ---

  // Use flow from node_modules.
  "flow.useNPMPackagedFlow": true,

  // --- ESLINT ---
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "html"
  ],

  // --- VIM ---

  // Enable easymotion.
  "vim.easymotion": true,

  // Delegate keybindings to be handled by VSCode instead of by Vim plugin.
  "vim.handleKeys": {
      "<C-q>": false,
  },

  // Yank to the system clipboard by default.
  "vim.useSystemClipboard": true,

  // --- TODO HIGHLIGHT ---
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#ffffff",
      "fontWeight": "900",
      "backgroundColor": "#0f77ff",
    },
    {
      "text": "NOTE:",
      "color": "#111111",
      "fontWeight": "900",
      "backgroundColor": "#ffdd00",
    },
    {
      "text": "HACK:",
      "color": "#ffdd00",
      "fontWeight": "900",
      "backgroundColor": "#ff2020",
    },
  ],

  // --- EDITOR ---

  // Controls the font family.
  "editor.fontFamily": "Input Mono Narrow, monospace",

  // Don't validate js or ts.
  "javascript.validate.enable": false,

  // Color theme.
  "workbench.colorTheme": "Night Owl No Italics",

  // Trim whitespace, but not for markdown.
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
      "files.trimTrailingWhitespace": false,
  },

  // Don't send telemetry.
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  // Don't use this window.
  "explorer.openEditors.visible": 0,

  // Automate formatting.
  "files.insertFinalNewline": true,

  // Who uses a mouse anyways?
  "editor.dragAndDrop": false,

  // Don't recommend.
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,

  // Don't force 'keep open'.
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",

  // Use SCSS to reduce errors in linting CSS.
  "files.associations": {
    "*.css": "scss"
  },

  // FSharp
  "FSharp.lineLens.enabled": "replaceCodeLens",
  "FSharp.lineLens.prefix": "  : ",

  // Disable annoying code lens.
  "editor.codeLens": false,
  "editor.renderWhitespace": "all",
  "workbench.tips.enabled": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "csharp.referencesCodeLens.enabled": false,
  "csharp.testsCodeLens.enabled": false,
  "merge-conflict.codeLens.enabled": false,
  "editor.quickSuggestionsDelay": 30,
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",

  // C# & Omnisharp
  "omnisharp.path": "latest",
}
